        android:gravity="center"
        android:inputType="text"
        android:maxLength="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wordli_text" />

    <EditText
        android:id="@+id/letter_input1_2"
